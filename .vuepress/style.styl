img.illustration
    width 50%
    transform translateX(50%)
    &.wide
        width 100%
        transform translateX(0%)
@media (max-width: 719px)
    img.illustration
        width 100%
        transform translateX(0)

.home
    padding 0
    .features
        border-top none
        margin-top 0

.custom-block.tip
    border-color #2196f3 !important

